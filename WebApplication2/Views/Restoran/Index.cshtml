<div class="section-top-border">
    <h3 class="mb-30"></h3>
    <br>
    <br>
    @if (User.Identity.Name == "")
    {
        <h3>Restoran Listesi</h3>
    }
    else
    {
        <h3>Şehrinizdeki Restoranlar</h3>
    }

    <br>
    <div class="progress-table-wrap">
        <div class="progress-table">
            <div class="table-head">
                <div class="serial">#</div>
                <div class="visit">Restoran Adı</div>
                <div class="country">Tanım</div>
                <div class="visit">Şehir</div>
                <div class="visit">İlçe</div>
                <div class="visit"></div>
            </div>

            @foreach (var item in Model)
            {
                <div class="table-row">
                    <div class="serial">@item.RestoranKodu</div>
                    <div class="visit">@item.RestoranAdi</div>
                    <div class="country">@item.Tanim</div>
                    <div class="visit">@item.SehirAdi</div>
                    <div class="visit">@item.IlceAdi</div>
                    <div class="visit"><a href="/Restoran/Detay/@item.RestoranKodu" class="genric-btn danger circle">Restorana Git</a></div>
                </div>
            }
        </div>
    </div>
</div>

